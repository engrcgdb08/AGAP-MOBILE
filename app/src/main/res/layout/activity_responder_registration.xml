<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:layout_height="match_parent"
    android:id="@+id/ordinarylogin"
    tools:context=".Login.ResponderLogin">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/agaplogo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/logonew1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/anton"
                android:gravity="center"
                android:text="RESPONDER REGISTRATION"
                android:textColor="@color/colorwhite"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/textView23"
                app:layout_constraintEnd_toEndOf="@+id/agaplogo"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/agaplogo"
                app:layout_constraintTop_toBottomOf="@+id/agaplogo" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="BACK ID"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView23"
                app:layout_constraintHorizontal_bias="0.784"
                app:layout_constraintStart_toStartOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="FRONT ID"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView23"
                app:layout_constraintHorizontal_bias="0.172"
                app:layout_constraintStart_toStartOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/textView23"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fill up this with your information"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textColorHint="@color/colorwhite"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView15"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <Button
                android:id="@+id/image_view"
                android:layout_width="86dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/report"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/textView20"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView20"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/image_view2"
                android:layout_width="87dp"
                android:layout_height="71dp"
                android:layout_margin="10dp"
                android:background="@drawable/report"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/textView21"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                tools:ignore="MissingConstraints" />

            <EditText
                android:textColorLink="@color/colorwhite"
                android:id="@+id/respondertype"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:textSize="14dp"
                android:hint="Department(Fire,Disaster,Hospital,Police)"
                android:textColorHint="@color/colorwhite"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintEnd_toEndOf="@+id/address"
                app:layout_constraintStart_toStartOf="@+id/address"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <EditText
                android:inputType="textCapWords"
                android:id="@+id/name"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="Complete Name"
                android:textColorHint="@color/colorwhite"
                app:layout_constraintBottom_toTopOf="@+id/emailResponder"
                app:layout_constraintEnd_toEndOf="@+id/respondertype"
                app:layout_constraintStart_toStartOf="@+id/respondertype"
                app:layout_constraintTop_toBottomOf="@+id/respondertype" />

            <EditText
                android:id="@+id/emailResponder"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="Email"
                android:textColorHint="@color/colorwhite"
                app:layout_constraintBottom_toTopOf="@+id/passResponder"
                app:layout_constraintEnd_toEndOf="@+id/name"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <EditText
                android:id="@+id/passResponder"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColorHint="@color/colorwhite"
                app:layout_constraintBottom_toTopOf="@+id/cpnumber"
                app:layout_constraintEnd_toEndOf="@+id/emailResponder"
                app:layout_constraintStart_toStartOf="@+id/emailResponder"
                app:layout_constraintTop_toBottomOf="@+id/emailResponder" />


            <EditText
                android:id="@+id/cpnumber"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="Cellphone Number"
                android:inputType="phone"
                android:textColorHint="@color/colorwhite"
                app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
                app:layout_constraintEnd_toEndOf="@+id/passResponder"
                app:layout_constraintStart_toStartOf="@+id/passResponder"
                app:layout_constraintTop_toBottomOf="@+id/passResponder" />

            <EditText
                android:id="@+id/address"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="Address"
                android:textColorHint="@color/colorwhite"
                app:layout_constraintBottom_toTopOf="@+id/respondertype"
                app:layout_constraintEnd_toEndOf="@+id/image_view2"
                app:layout_constraintStart_toStartOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/image_view2" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="SIGN IN"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cpnumber"
                app:layout_constraintHorizontal_bias="0.789"
                app:layout_constraintStart_toStartOf="@+id/cpnumber"
                app:layout_constraintTop_toBottomOf="@+id/cpnumber"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SIGN UP"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cpnumber"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="@+id/cpnumber"
                app:layout_constraintTop_toBottomOf="@+id/cpnumber" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>